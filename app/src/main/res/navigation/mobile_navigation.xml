<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.rotalivre.ui.home.HomeFragment"
        android:label="Início"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.rotalivre.ui.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_routes"
        android:name="com.example.rotalivre.ui.routes.RoutesFragment"
        android:label="Minhas Rotas"
        tools:layout="@layout/fragment_routes" />

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.example.rotalivre.ui.favorites.FavoritesFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.rotalivre.ui.settings.SettingsFragment"
        android:label="Configurações"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_help"
        android:name="com.example.rotalivre.ui.help.HelpFragment"
        android:label="Ajuda"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.rotalivre.ui.logout.LogoutFragment"
        android:label="Sair"
        tools:layout="@layout/fragment_logout" />
</navigation>

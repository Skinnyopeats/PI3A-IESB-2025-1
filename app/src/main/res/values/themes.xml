<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RotaLivre" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F5B718</item>
        <item name="colorPrimaryVariant">#D6A013</item> <!-- Atualizado: tom mais escuro do amarelo -->
        <item name="colorOnPrimary">#000000</item> <!-- Melhor contraste sobre o amarelo -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF6F00</item> <!-- Laranja vibrante para destaques -->
        <item name="colorSecondaryVariant">#FF8F00</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RotaLivre.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RotaLivre.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RotaLivre.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
